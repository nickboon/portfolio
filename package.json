{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "A visual artist's portfolio website",
  "main": "index.js",
  "scripts": {
    "start": "lite-server -c config/bs-config.json",
    "pretest": "jshint ./test/*.js",
    "test": "mocha",
    "lint:json:src": "jsonlint ./json/src.json -q",
    "lint": "jshint ./build/*.js ./deploy/*.js ./json/**/*.json",
    "build:json": "node ./build/buildJson.js ./json/src.json ./json/built/index.json",
    "build:json:clean": "rimraf ./json/built/index.json",
    "prebuild:json": "npm run lint && npm run lint:json:src && npm run build:json:clean",
    "postbuild:json": "jsonlint ./json/built/index.json -q",
    "build:html": "mustache -p html/collection.mustache -p html/images.mustache -p html/image.mustache json/built/index.json html/index.mustache > dist/index.html",
    "build:html:beautify": "js-beautify --html -f dist/index.html -o dist/index.html",
    "validate": "html-validator --file=dist/index.html",
    "postbuild:html": "npm run build:html:beautify",
    "build": "npm run build:json && npm run build:html",
    "deploy:clean": "rimraf ./dist/*",
    "deploy:local": "npm test && npm run deploy:clean && npm run build && node ./deploy/deploy.js && npm run validate && npm start",
    "deploy:offline": "npm test && npm run deploy:clean && npm run build && node ./deploy/deploy.js offline && npm start",
    "deploy:test": "node ./deploy.js",
    "postdeploy:test": "chromium-browser https://nickboon.neocities.org/test/test.html &"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nickboon/portfolio.git"
  },
  "engine": {
    "node": "~5.0.0",
    "npm": "~3.3.6"
  },
  "keywords": [
    "portfolio"
  ],
  "author": "Nick Boon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nickboon/portfolio/issues"
  },
  "homepage": "https://github.com/nickboon/portfolio#readme",
  "devDependencies": {
    "html-validator-cli": "^3.1.0",
    "js-beautify": "^1.6.8",
    "jshint": "^2.9.4",
    "jsonlint": "^1.6.2",
    "lite-server": "^2.2.2",
    "mocha": "^3.2.0",
    "mustache": "^2.3.0",
    "neocities": "0.0.3",
    "rimraf": "^2.5.4",
    "should": "^11.1.2"
  }
}
